<!doctype html>
<html>
<head>
    <title>21 Savage Fan Site</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Abril+Fatface&family=Babylonica&family=Beau+Rivage&family=Berkshire+Swash&family=Cinzel+Decorative&family=Dancing+Script&family=Fjalla+One&family=Fredericka+the+Great&family=Frijole&family=Kristi&family=Londrina+Outline&family=Merriweather:wght@300&family=Monoton&family=Mrs+Sheppards&family=Noto+Serif+Display&family=Open+Sans:wght@300&family=Permanent+Marker&family=Pinyon+Script&family=Red+Rose:wght@300&family=Roboto:ital@1&family=Satisfy&family=Sigmar+One&family=Smooch&family=Tapestry&display=swap" rel="stylesheet">
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1> Profile Page</h1>
        <a href="/logout" class="button">Logout</a>
    </div>
    <!-- // btn btn-default btn-sm -->
    <div class="row">
\
        <div class="col-sm-6">
          <h3>Fan Feed</h3>
          <ul class="messages">
          <% for(var i=0; i<messages.length; i++) {%>
            <li class="message">
              <span><%= messages[i].name %></span>
              <span><%= messages[i].msg %></span>
              <span><%= messages[i].thumbUp %></span>
              <span><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
              <span><i class="fa fa-thumbs-down" aria-hidden="true"></i></span>
              <span><i class="fa fa-trash-o" aria-hidden="true"></i></span>
            </li>
          <% } %>
          </ul>

          <h2>Add a message</h2>
        <% if (user.local.email) { %>
          <form action="/messages" method="POST">
            <input type="text" value="<%= user.local.email %>" name="name">
            <input type="text" placeholder="message" name="msg">
            <button class="button" type="submit">Submit</button>
          </form>
        </div>
        <% } %>

</div>

<script src="main.js"></script>

</body>
</html>
